{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "paths": {
      "@core/*": [
        "src/core/*"
      ],
      "@daos/*": [
        "src/daos/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@crawler/*": [
        "src/crawler/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@server": [
        "src/Server"
      ],
      "@loadenv": [
        "src/LoadEnv"
      ],
      "@mongodb": [
        "src/MongoDb"
      ],
      "@controller/*": [
        "src/controller/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@dbs/*":[
        "src/dbs/*"
      ]
    },
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "spec/**/*.ts"
  ],
  "exclude": [
    "src/public/"
  ]
}
